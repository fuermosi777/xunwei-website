<xml>
    <ToUserName>
        <![CDATA[{{ to }}]]>
    </ToUserName>
    <FromUserName>
        <![CDATA[xunwei_nyc]]>
    </FromUserName>
    <CreateTime>12345678</CreateTime>
    <MsgType>
        <![CDATA[news]]>
    </MsgType>
    <ArticleCount>{{ post|length }}</ArticleCount>
    <Articles>
        {% for p in post %}
        <item>
            <Title>
                <![CDATA[{{ p.title }}]]>
            </Title>
            <Description>
                <![CDATA[{{ p.preview }}]]>
            </Description>
            <PicUrl>
                <![CDATA[{{ p.business.photo.url }}]]>
            </PicUrl>
            <Url>
                <![CDATA[http://xun-wei.com/i/{{ p.id }}/]]>
            </Url>
        </item>
        {% endfor %}
    </Articles>
</xml>
